<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Vms.Interfaces;assembly=Vms"
             x:DataType="vm:IWorkspace"
             xmlns:local="clr-namespace:Presentation"
             x:Class="Presentation.C4ModelEditor"
             Title="C4ModelEditor">

    <ListView ItemsSource="{Binding SoftwareSystems}">
        <ListView.Header>
            <HorizontalStackLayout>
                <Label Text="Workspace" />
                <Button Text="+" Command="{Binding CreateSoftwareSystem}" />
            </HorizontalStackLayout>
        </ListView.Header>
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="vm:ISoftwareSystem">
                <ViewCell>
                    <local:SoftwareSystemView />
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>
